@page
@model AutoEscolaPeDeChumbo.Pages.Alunos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:rebeccapurple">Alunos</h1>

<p>
    <a style="color:rebeccapurple" asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr style="border-color:rebeccapurple">
            <th style="border-color: rebeccapurple; color: rebeccapurple">
                @Html.DisplayNameFor(model => model.Aluno[0].funcionario)
            </th>
            <th style="border-color: rebeccapurple; color: rebeccapurple">
                @Html.DisplayNameFor(model => model.Aluno[0].cpf)
            </th>
            <th style="border-color: rebeccapurple; color: rebeccapurple">
                @Html.DisplayNameFor(model => model.Aluno[0].idade)
            </th>
            <th style="border-color: rebeccapurple; color: rebeccapurple">
                @Html.DisplayNameFor(model => model.Aluno[0].saldo)
            </th>
            <th style="border-color: rebeccapurple; color: rebeccapurple">
                @Html.DisplayNameFor(model => model.Aluno[0].possuiCNH)
            </th>
            <th style="border-color: rebeccapurple; color: rebeccapurple"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Aluno) {
        <tr style="border-color:rebeccapurple">
            <td style="border-color:rebeccapurple">
                @Html.DisplayFor(modelItem => item.funcionario)
            </td>
            <td style="border-color:rebeccapurple">
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td style="border-color:rebeccapurple">
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td style="border-color:rebeccapurple">
                @Html.DisplayFor(modelItem => item.saldo)
            </td>
            <td style="border-color:rebeccapurple">
                @Html.DisplayFor(modelItem => item.possuiCNH)
            </td>
            <td style="border-color:rebeccapurple">
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
